html
  head
    title Login page
  body
    h1 #{message}
    form#login(name='login_form', method='post', action='/authentication')
      div
        label(for='username') E-mail:
        input#username(type='text', name='email', placeholder='Email', required='required')
      div
        label(for='password') Password:
        input#password(type='password', name='password', placeholder='Password', required='required')
      br
      div
        button#login_button(type='submit') Login